<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F6FEF3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/color_000000"
        android:text="Transfer Cash to your \nBank Account Instantly"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/first_home_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_000000"
        android:text="upto  ₹"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:background="@drawable/bg_4dp_f2f2f2_shape"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="I need a loan of（INR）"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="5000"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_20dp_fdc800_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="10000"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:background="@drawable/bg_20dp_f9efca_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="20000"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:background="@drawable/bg_20dp_f9efca_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            />


        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="50000"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:background="@drawable/bg_20dp_f9efca_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_79E9C7"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_000000"
            android:text="New user will have access to interest-\nfree loans\nLoan period  91+ days"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            />


        <TextView
            android:id="@+id/get_instant_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:text="Get Instant Approval"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bg_8dp_20c69d_shape"
            />

    </LinearLayout>

</LinearLayout>