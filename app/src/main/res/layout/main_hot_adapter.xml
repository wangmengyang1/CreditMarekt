<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/hot_credit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hot_apply_background">

        <ImageView
            android:id="@+id/hot_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/hot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hot_img"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColor"
            tools:text="环球钱包" />

        <TextView
            android:id="@+id/hot_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hot_img"
            android:layout_toRightOf="@id/hot_img"
            tools:text="8,000"
            android:textColor="@color/pk_new_red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hot_credit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hot_money_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/hot_apply_button"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
            android:text="申请"
            android:textColor="@color/pk_blue" />

    </RelativeLayout>
</RelativeLayout>